---
import '@/styles/global.css';
import ThemeToggle from '@/components/ThemeToggle.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A curated library of original short fiction and creative nonfiction.' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Cormorant:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Outfit:wght@400;500;600;700&family=Source+Serif+4:ital,opsz,wght@0,8..60,300;0,8..60,400;0,8..60,500;0,8..60,600;1,8..60,400;1,8..60,500&display=swap" rel="stylesheet" />
  <slot name="head" />
  <title>{title} | Must Read</title>
</head>
<body>
  <header class="site-header">
    <div class="container site-header__inner">
      <a href={import.meta.env.BASE_URL} class="site-header__logo">
        <span class="site-header__logo-icon" aria-hidden="true">&#9830;</span>
        Must Read
      </a>
      <nav class="site-header__nav" aria-label="Main navigation">
        <a href={`${import.meta.env.BASE_URL}browse/`} class:list={{ active: currentPath.startsWith('/browse') }}>Browse</a>
        <a href={`${import.meta.env.BASE_URL}about/`} class:list={{ active: currentPath.startsWith('/about') }}>About</a>
      </nav>
      <ThemeToggle />
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="site-footer">
    <div class="container site-footer__inner">
      <div class="site-footer__brand">
        <span class="site-footer__logo">
          <span aria-hidden="true">&#9830;</span> Must Read
        </span>
        <p class="site-footer__tagline">Original fiction and creative nonfiction, free to read.</p>
      </div>
      <div class="site-footer__links">
        <a href={`${import.meta.env.BASE_URL}browse/`}>Browse</a>
        <a href={`${import.meta.env.BASE_URL}about/`}>About</a>
      </div>
      <div class="site-footer__colophon">
        <p>All works generated by Claude Opus 4.6.</p>
        <p>Each piece combines the styles of two authors with the DNA of two canonical works.</p>
      </div>
    </div>
  </footer>
</body>
</html>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: var(--blur-header);
    -webkit-backdrop-filter: var(--blur-header);
    background: color-mix(in srgb, var(--color-bg) 80%, transparent);
    border-bottom: 1px solid color-mix(in srgb, var(--color-border) 50%, transparent);
    padding: 0.75rem 0;
  }

  .site-header__inner {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .site-header__logo {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.35rem;
    color: var(--color-text);
    text-decoration: none;
    letter-spacing: -0.02em;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .site-header__logo:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .site-header__logo-icon {
    color: var(--color-accent);
    font-size: 0.8em;
  }

  .site-header__nav {
    display: flex;
    gap: var(--space-md);
    margin-left: auto;
    margin-right: var(--space-sm);
  }

  .site-header__nav a {
    font-family: var(--font-ui);
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.25rem 0;
    position: relative;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .site-header__nav a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform var(--duration-normal) var(--ease-out);
    border-radius: 1px;
  }

  .site-header__nav a:hover,
  .site-header__nav a.active {
    color: var(--color-text);
    text-decoration: none;
  }

  .site-header__nav a:hover::after,
  .site-header__nav a.active::after {
    transform: scaleX(1);
  }

  /* Footer */
  .site-footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-2xl) 0;
    margin-top: var(--space-3xl);
    background: var(--color-surface);
  }

  .site-footer__inner {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  @media (min-width: 768px) {
    .site-footer__inner {
      grid-template-columns: 2fr 1fr 2fr;
      gap: var(--space-2xl);
    }
  }

  .site-footer__logo {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--color-text);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .site-footer__logo span {
    color: var(--color-accent);
  }

  .site-footer__tagline {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  .site-footer__links {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .site-footer__links a {
    font-family: var(--font-ui);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .site-footer__links a:hover {
    color: var(--color-accent);
  }

  .site-footer__colophon {
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .site-footer__colophon p + p {
    margin-top: 0.25rem;
  }
</style>
