---
interface Props {
  genres: { name: string; slug: string; count: number }[];
  activeGenre?: string;
}

const { genres, activeGenre } = Astro.props;
---

<nav class="genre-nav" aria-label="Genre navigation">
  <a href={`${import.meta.env.BASE_URL}browse/`} class:list={["filter-pill", { active: !activeGenre }]}>
    All
  </a>
  {genres.map(g => (
    <a
      href={`${import.meta.env.BASE_URL}browse/${g.slug}/`}
      class:list={["filter-pill", { active: activeGenre === g.slug }]}
    >
      {g.name}
      <span class="genre-nav__count">{g.count}</span>
    </a>
  ))}
</nav>

<style>
  .genre-nav {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    padding: var(--space-md) 0 var(--space-lg);
  }

  .genre-nav__count {
    font-size: 0.82em;
    opacity: 0.6;
    margin-left: 0.15rem;
  }
</style>
