---
interface Props {
  personaName: string;
  personaId: string;
  rating: number;
  text: string;
  date: string;
  helpfulCount: number;
}

const { personaName, personaId, rating, text, date, helpfulCount } = Astro.props;
const initials = personaName.split(' ').map(n => n[0]).join('').slice(0, 2);
---

<div class="review-card">
  <div class="review-card__header">
    <div class="review-card__avatar" aria-hidden="true">{initials}</div>
    <div class="review-card__info">
      <span class="review-card__persona">{personaName}</span>
      <div class="review-card__meta">
        <span class="review-card__rating" aria-label={`${rating} out of 5 stars`}>
          {Array(rating).fill(null).map(() => <span class="review-star review-star--full">&#9733;</span>)}
          {Array(5 - rating).fill(null).map(() => <span class="review-star review-star--empty">&#9734;</span>)}
        </span>
        <time class="review-card__date" datetime={date}>
          {new Date(date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
        </time>
      </div>
    </div>
  </div>
  <p class="review-card__text">{text}</p>
  {helpfulCount > 0 && (
    <p class="review-card__helpful">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M7 10v12"/><path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z"/></svg>
      {helpfulCount} found this helpful
    </p>
  )}
</div>

<style>
  .review-card {
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .review-card:last-child {
    border-bottom: none;
  }

  .review-card__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .review-card__avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--color-accent-subtle);
    color: var(--color-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-ui);
    font-size: 0.82rem;
    font-weight: 700;
    letter-spacing: 0.02em;
    flex-shrink: 0;
    border: 1px solid color-mix(in srgb, var(--color-accent) 20%, transparent);
  }

  .review-card__info {
    flex: 1;
    min-width: 0;
  }

  .review-card__persona {
    font-family: var(--font-ui);
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-text);
    display: block;
  }

  .review-card__meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.15rem;
  }

  .review-card__rating {
    display: flex;
    gap: 1px;
  }

  .review-star {
    font-size: 0.8rem;
    line-height: 1;
  }

  .review-star--full { color: var(--color-star); }
  .review-star--empty { color: var(--color-star-empty); }

  .review-card__date {
    font-family: var(--font-ui);
    font-size: 0.82rem;
    color: var(--color-text-secondary);
  }

  .review-card__text {
    font-family: var(--font-reading);
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text);
  }

  .review-card__helpful {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-family: var(--font-ui);
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin-top: 0.6rem;
  }

  .review-card__helpful svg {
    opacity: 0.6;
  }
</style>
